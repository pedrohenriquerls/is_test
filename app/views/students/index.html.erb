<h1>Estudantes</h1>

<%= link_to 'Novo Estudante', new_student_path, class: 'btn btn-info' %>

<table class="table">
  <thead>
  <tr>
    <th>nome</th>
    <th>Matricula</th>
    <th>Status</th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.register_number %></td>
        <td><%= student.status %></td>
        <td>
          <div class="btn-group">
            <button class="btn"><%= link_to 'Editar', edit_student_path(student) %></button>
            <button class="btn"><%= link_to 'Apagar', student, method: :delete, data: { confirm: 'Quer realmente apagar?' } %></button>
          </div>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
